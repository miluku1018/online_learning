<p id="notice"><%= notice %></p>

<h1>課程列表</h1>

 <%= link_to '新增課程', new_admin_course_path, class: "btn btn-info float-right" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col" class="text-nowrap">課程主題</th>
      <th scope="col" class="text-nowrap">課程價格</th>
      <th scope="col" class="text-nowrap">幣別</th>
      <th scope="col" class="text-nowrap">課程類型</th>
      <th scope="col" class="text-nowrap">是否上架</th>
      <th scope="col" class="text-nowrap">課程連結網址</th>
      <th scope="col" class="text-nowrap">課程描述</th>
      <th scope="col" class="text-nowrap">課程效期</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.title, admin_course_path(course) %></td>
        <td><%= course.price %></td>
        <td><%= course.currency %></td>
        <td><%= course.course_type %></td>
        <td><%= course.on_sell %></td>
        <td><%= course.course_url %></td>
        <td><%= truncate course.description, length: 20 %></td>
        <td><%= course.valid_period %> 天</td>
        <td class="text-nowrap"><%= link_to '編輯', edit_admin_course_path(course) %></td>
        <td class="text-nowrap"><%= link_to '刪除', admin_course_path(course), method: :delete, data: { confirm: '確認是否刪除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



