<p id="notice"><%= notice %></p>

<h1>課程列表</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">課程主題</th>
      <th scope="col">課程價格</th>
      <th scope="col">幣別</th>
      <th scope="col">課程類型</th>
      <th scope="col">是否上架</th>
      <th scope="col">課程連結</th>
      <th scope="col">課程描述</th>
      <th scope="col">課程有效期</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.price %></td>
        <td><%= course.currency %></td>
        <td><%= course.course_type %></td>
        <td><%= course.on_sell %></td>
        <td><%= course.course_url %></td>
        <td><%= course.description %></td>
        <td><%= course.valid_period %></td>
        <td><%= link_to '課程列表', course %></td>
        <td><%= link_to '課程編輯', edit_admin_course_path(course) %></td>
        <td><%= link_to '課程刪除', course, method: :delete, data: { confirm: '確認是否刪除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

