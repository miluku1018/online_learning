<div class="row">
  <div class="col-sm-6">
    <%= form_with(model: course, local: true) do |form| %>
      <% if course.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
    
          <ul>
          <% course.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <%= form.label :title, '課程主題' %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :price, '課程價格' %>
        <%= form.text_field :price, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :currency, '幣別' %>
        <%= form.text_field :currency, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :course_type, '課程類型' %>
        <%= form.text_field :course_type, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :on_sell, '是否上架' %>
        <%= form.check_box :on_sell, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :course_url, '課程連結' %>
        <%= form.text_area :course_url, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :description, '課程描述' %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :valid_period, '課程有效期' %>
        <%= form.number_field :valid_period, class: "form-control" %>
      </div>
    
      <div class="actions">
        <%= form.submit "送出", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
